<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/linearLayoutUpdateConexionActivity"
        tools:context=".Activities.Conexiones.UpdateConexionActivity">
        <include android:id="@+id/toolbar" layout="@layout/toolbar"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/buttonActualizarActualizarConexion"
                android:background="@drawable/estilo_dos_boton"
                android:textColor="@drawable/estilo_uno_texto_boton"
                android:textSize="8dp"
                android:layout_margin="5dp"
                android:text="Actualizar"/>
            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/buttonVolverActualizarConexion"
                android:textSize="8dp"
                android:background="@drawable/estilo_dos_boton"
                android:textColor="@drawable/estilo_uno_texto_boton"
                android:layout_margin="5dp"
                android:text="Volver"/>
            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/buttonEliminarActualizarConexion"
                android:textSize="8dp"
                android:background="@drawable/estilo_dos_boton"
                android:textColor="@drawable/estilo_uno_texto_boton"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:text="Eliminar"/>
        </LinearLayout>
        <!--<ProgressBar
            android:id="@+id/progressBar" style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            />-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/buttonConectarActualizarConexion"
                android:background="@drawable/estilo_dos_boton"
                android:textSize="8dp"
                android:layout_margin="5dp"
                android:text="Entrar"
                android:textColor="@drawable/estilo_uno_texto_boton"/>

            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/buttonProbarConexionActualizarConexion"
                android:background="@drawable/estilo_dos_boton"
                android:textSize="8dp"
                android:layout_margin="5dp"
                android:text="Probar conexión"
                android:textColor="@drawable/estilo_uno_texto_boton"/>
            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/buttonDespertarConexionActualizarConexion"
                android:background="@drawable/estilo_dos_boton"
                android:textSize="8dp"
                android:layout_margin="5dp"
                android:text="Despertar"
                android:textColor="@drawable/estilo_uno_texto_boton"/>

        </LinearLayout>
        <TextView
            android:id="@+id/textViewResultadoActualizarConexion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_margin="8dp"
            />
        <!--<TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_margin="10dp"
            android:text="Actualizar"/>-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alias"
                android:layout_margin="10dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editTextAliasActualizarConexion"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewMensajeAlias"
            android:textColor="#ff0000"
            android:layout_marginLeft="80dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Usuario"
                android:layout_margin="10dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editTextUsuarioActualizarConexion"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewMensajeUsuario"
            android:textColor="#ff0000"
            android:layout_marginLeft="80dp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:layout_margin="10dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Déjalo vacío para utilizar clave"
                android:id="@+id/editTextPasswordActualizarConexion"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewMensajePassword"
            android:textColor="#ff0000"
            android:layout_marginLeft="80dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/buttonDescargarClavePubicaUpdateConexion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:padding="10dp"
                android:background="#ff0000"
                android:textColor="#ffffff"
                android:text="Descargar clave" />
            <Button
                android:id="@+id/buttonCrearClavePubicaUpdateConexion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ff0000"
                android:textColor="#ffffff"
                android:text="Crear clave pública" />

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/texViewEnlaceDescargaClavePublica"
            android:layout_margin="10dp"
            android:visibility="gone"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Host"
                android:layout_margin="10dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editTextHostActualizarConexion"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewMensajeHost"
            android:textColor="#ff0000"
            android:layout_marginLeft="80dp"
            />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mac"
                android:layout_margin="10dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="No es obligatorio"
                android:id="@+id/editTextMacActualizarConexion"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewMensajeMac"
            android:textColor="#ff0000"
            android:layout_marginLeft="80dp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Puerto"
                android:layout_margin="10dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editTextPuertoActualizarConexion"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewMensajePuerto"
            android:textColor="#ff0000"
            android:layout_marginLeft="80dp"
            />






    </LinearLayout>
</ScrollView>